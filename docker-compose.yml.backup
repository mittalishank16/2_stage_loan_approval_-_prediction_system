services:
  backend:
    build: 
      context: .
      dockerfile: Dockerfile
    ports:
      - "8000:8000"
    volumes:
      - ./models:/app/models

  frontend:
    build: 
      context: .
      dockerfile: dockerfile.gradio
    ports:
      - "7860:7860"
    environment:
      - BACKEND_URL=http://backend:8000/predict
    depends_on:
      - backend